# MCP Server Configuration
MCP_SERVER_NAME=mcp-python-server
MCP_SERVER_VERSION=1.0.0
MCP_LOG_LEVEL=INFO

# Serper API Configuration (for web search)
SERPER_API_KEY=your_serper_api_key_here
SERPER_URL=https://google.serper.dev/search

# Logging Configuration
MCP_LOG_FILE=logs/mcp_server.log
LOG_PATH=logs

# Tool Configuration
MCP_MAX_TOOL_EXECUTION_TIME=30
MCP_ENABLE_TOOL_VALIDATION=true

# Resource Configuration
MCP_MAX_RESOURCE_SIZE=1048576
MCP_ENABLE_RESOURCE_CACHING=true

# Security Configuration
MCP_ENABLE_INPUT_VALIDATION=true
MCP_MAX_INPUT_LENGTH=10000

# Development Configuration
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
